                <div class="action-bar">
                    <button class="btn" onclick="generateRecruit()">Next</button>
                    <button class="btn" onclick="generateRecruit('Post Anchor')">Big</button>
                    <button class="btn" onclick="generateRecruit('Rim Runner')">Rim</button>
                    <button class="btn" onclick="generateRecruit('Alien')" style="color: var(--alien);">Alien</button>
