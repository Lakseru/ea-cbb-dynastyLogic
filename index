    <script>
        const schemes = {
            analytics: { name: "1.5-Out Analytics", c: "3pt", cLabel: "3-Point", e: "pas", eLabel: "Spacing IQ", iType: "arch", iVal: "Rim Runner", iLabel: "Rim Runner Arch" },
            motion: { name: "Variable Motion", c: "pas", cLabel: "Passing", e: "spd", eLabel: "Off-Ball Speed", iType: "trait", iVal: "Ball Stopper", iLabel: "'Ball Stopper' Trait" },
            bully: { name: "Bully Ball", c: "str", cLabel: "Strength", e: "reb", eLabel: "Post Control", iType: "stat_low", iVal: "weight", iThreshold: 215, iLabel: "Weight < 215lbs" },
            pace: { name: "Pace & Space", c: "spd", cLabel: "Speed", e: "3pt", eLabel: "Trailing 3s", iType: "arch", iVal: "Post Anchor", iLabel: "Post Anchor Arch" },
            spread: { name: "Spread Attack", c: "hnd", cLabel: "Ball Handle", e: "spd", eLabel: "First Step", iType: "trait", iVal: "Passive", iLabel: "'Passive' Trait" }
        };

        const archetypes = {
            "Playmaker": { pos: "PG", hMin: 73, hMax: 77, wMin: 175, wMax: 205, caps: { '3pt': 80, 'spd': 95, 'str': 50, 'hnd': 99, 'pas': 99, 'reb': 40 } },
            "Sharpshooter": { pos: "SG", hMin: 75, hMax: 79, wMin: 185, wMax: 215, caps: { '3pt': 99, 'spd': 85, 'str': 60, 'hnd': 80, 'pas': 75, 'reb': 50 } },
            "Slasher": { pos: "SF", hMin: 77, hMax: 81, wMin: 200, wMax: 235, caps: { '3pt': 70, 'spd': 92, 'str': 75, 'hnd': 85, 'pas': 70, 'reb': 65 } },
            "Post Anchor": { pos: "PF", hMin: 80, hMax: 83, wMin: 240, wMax: 270, caps: { '3pt': 55, 'spd': 50, 'str': 99, 'hnd': 50, 'pas': 65, 'reb': 90 } },
            "Rim Runner": { pos: "C", hMin: 82, hMax: 86, wMin: 230, wMax: 260, caps: { '3pt': 40, 'spd': 75, 'str': 85, 'hnd': 45, 'pas': 40, 'reb': 85 } }
        };

        const traits = ["None", "None", "None", "Ball Stopper", "Passive", "Alpha", "Homesick"];

        let currentPlayer = {};
        let isScouted = false;

        function generateRecruit(forceType = null) {
            isScouted = false;
            const btn = document.getElementById('btn-scout');
            btn.classList.remove('disabled');
            btn.innerText = "DECRYPT METRICS [10 PTS]";

            let archKey = Object.keys(archetypes)[Math.floor(Math.random() * 5)];
            if (forceType && forceType !== 'Alien') archKey = forceType;

            let archData = archetypes[archKey];
            let rarity = "Common";

            const roll = Math.random();
            if (roll > 0.98 || forceType === 'Alien') rarity = "Alien";
            else if (roll > 0.90) rarity = "Generational";

            let h = rand(archData.hMin, archData.hMax);
            let w = rand(archData.wMin, archData.wMax);
            let trait = traits[Math.floor(Math.random() * traits.length)];

            let stats = {
                '3pt': rand(40, archData.caps['3pt']),
                'spd': rand(40, archData.caps['spd']),
                'str': rand(40, archData.caps['str']),
                'hnd': rand(40, archData.caps['hnd']),
                'pas': rand(40, archData.caps['pas']),
                'reb': rand(40, archData.caps['reb'])
            };

            if (rarity === "Alien") {
                h = rand(88, 92);
                w = 230;
                stats['hnd'] = rand(85, 99);
                stats['3pt'] = rand(80, 99);
                archKey = "Unicorn";
            }

            const idStr = Math.floor(Math.random() * 9000) + 1000;
            const suffix = String.fromCharCode(65 + Math.floor(Math.random() * 26));

            currentPlayer = {
                name: `ASSET-${idStr}-${suffix}`,
                pos: archData.pos,
                arch: archKey,
                h: h,
                w: w,
                wing: h + rand(2, 6),
                trait: trait,
                stats: stats,
                rarity: rarity
            };

            renderPlayer();
            updateFit();
        }

        function revealStats() {
            if (isScouted) return;
            isScouted = true;
            const btn = document.getElementById('btn-scout');
            btn.classList.add('disabled');
            btn.innerText = "METRICS UNLOCKED";
            renderPlayer();
            updateFit();
        }

        function renderPlayer() {
            const p = currentPlayer;

            document.getElementById('p-name').innerText = p.name;
            document.getElementById('p-pos').innerText = p.pos;
            document.getElementById('p-arch').innerText = p.arch;
            document.getElementById('p-hw').innerText = `${inchToFt(p.h)} / ${p.w}`;

            const tBadge = document.getElementById('p-trait');
            const aBadge = document.getElementById('p-alien');

            tBadge.style.display = "none";
            aBadge.style.display = "none";

            if (isScouted) {
                if (p.trait !== "None") {
                    tBadge.style.display = "inline-flex";
                    tBadge.innerText = p.trait;
                }
                if (p.rarity === "Alien") {
                    aBadge.style.display = "inline-flex";
                }
            }

            drawBar('3pt', p.stats['3pt']);
            drawBar('spd', p.stats['spd']);
            drawBar('str', p.stats['str']);
            drawBar('hnd', p.stats['hnd']);
            drawBar('pas', p.stats['pas']);
            drawBar('reb', p.stats['reb']);
        }

        function drawBar(key, val) {
            const fill = document.getElementById(`fill-${key}`);
            const text = document.getElementById(`val-${key}`);

            if (!isScouted) {
                fill.className = "bar-fill unscouted";
                text.innerText = "???";
                text.style.color = "var(--text-muted)";
                fill.style.width = "100%";
                fill.style.backgroundColor = "transparent";
            } else {
                fill.className = "bar-fill";
                fill.style.width = `${val}%`;
                text.innerText = val;
                text.style.color = "var(--text-main)";

                if (val >= 90) fill.style.background = "var(--alien)";
                else if (val >= 75) fill.style.background = "var(--success)";
                else if (val <= 50) fill.style.background = "var(--danger)";
                else fill.style.background = "var(--text-main)";
            }
        }

        function updateFit() {
            const sKey = document.getElementById('schemeSelect').value;
            const scheme = schemes[sKey];
            const p = currentPlayer;

            document.getElementById('ui-catalyst').innerText = scheme.cLabel;
            document.getElementById('ui-enabler').innerText = scheme.eLabel;
            document.getElementById('ui-inhibitor').innerText = scheme.iLabel;

            const badge = document.getElementById('fit-grade');
            const console = document.getElementById('logic-console');

            if (!isScouted) {
                badge.innerText = "--";
                badge.style.color = "var(--text-muted)";
                console.innerHTML = `<span class='console-line'>Awaiting Decryption...</span>`;
                return;
            }

            let grade = "C";
            let color = "var(--text-muted)";
            let logs = [];

            let failed = false;
            if (scheme.iType === "arch" && p.arch === scheme.iVal) {
                failed = true;
                logs.push(`Wrong archetype. Get him out of here.`);
            } else if (scheme.iType === "trait" && p.trait === scheme.iVal) {
                failed = true;
                logs.push(`Attitude problem. He's a '${p.trait}'.`);
            } else if (scheme.iType === "stat_low" && p[scheme.iVal] < scheme.iThreshold) {
                failed = true;
                logs.push(`Too small. He'll get bullied.`);
            }

            if (failed) {
                grade = "D";
                color = "var(--danger)";
                logs.push(`Hard Pass. Doesn't fit the system.`);
            } else {
                const catVal = p.stats[scheme.c];
                if (catVal >= 85) {
                    grade = "A";
                    color = "var(--success)";
                    logs.push(`Perfect fit. This kid is elite.`);
                } else if (catVal >= 75) {
                    grade = "B";
                    color = "var(--text-main)";
                    logs.push(`Solid rotation piece. He can work.`);
                } else if (catVal <= 60) {
                    grade = "F";
                    color = "var(--danger)";
                    logs.push(`Can't execute the primary action. Liability.`);
                } else {
                    logs.push(`Serviceable. Nothing special.`);
                }
            }

            badge.innerText = grade;
            badge.style.color = color;

            console.innerHTML = logs.map(l => `<span class='console-line'>${l}</span>`).join("");
        }

        function rand(min, max) { return Math.floor(Math.random() * (max - min + 1)) + min; }
        function inchToFt(i) { return `${Math.floor(i / 12)}'${i % 12}"`; }

        generateRecruit();
    </script>
</body>
</html>
